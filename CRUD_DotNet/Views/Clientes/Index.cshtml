@model ClientesListViewModel

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>@ViewData["Title"]</h2>

<table id="clientesTable" class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Endereço</th>
        <th>Rua</th>
        <th>Bairro</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th>Ativo</th>
        <th>Editar</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var cliente in Model.Clientes)
    {
        <tr>
            <td>@cliente.Id</td>
            <td>@cliente.Nome</td>
            <td>@cliente.Endereco</td>
            <td>@cliente.Rua</td>
            <td>@cliente.Bairro</td>
            <td>@cliente.Cidade</td>
            <td>@cliente.EstadoSigla</td>
            <td>
                    <input type="checkbox" class="form-check-input" id="Ativo_@cliente.Id" @(cliente.Ativo ? "checked" : "") onchange="atualizarAtivo(@cliente.Id, this.checked)">
            </td>
            <td>
                <a class="nav-link text-dark" 
                   asp-area="" 
                   asp-controller="Clientes" 
                   asp-action="Update" 
                   asp-route-id="@cliente.Id">
                    <i class="bi bi-amd"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

<button><a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Create">Criar cliente</a></button>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Clientes.js"></script>